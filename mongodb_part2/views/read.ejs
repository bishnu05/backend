<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <!-- <link rel="stylesheet" href="/stylesheets/style.css" /> -->
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 p-8 text-white">
      <a href="/" class="text-blue-500">Home</a>
      
        <h1 class="text-3xl tracking-tighter mt-10 mb-3">All Users</h1>
        <div class="users flex gap-3 flex-wrap">
          <% if(allusers.length > 0){ %>
           <% allusers.forEach(function(user){ %>
           <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
            <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden"><img src="<%= user.image %>" alt="" class="h-full w-full object-cover"/></div>
            <h3 class="text-2xl mt-3 tracking-tighter"><%= user.name %></h3>
            <h5 class="text-zinc-500"><%= user.email %></h5>
            <div class="flex gap-3">
              <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit User</a>
              <a class="text-red-500" href="/delete/<%= user._id %>">Delete User</a>
            </div>
          </div>
         <% }) %>
          <% } else {  %>
           <h3 class="text-zinc-500">No users yet</h3>
           <%  } %>
         
        </div>
      
    </div>
  </body>
</html>
